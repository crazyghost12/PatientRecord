<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androdevs.patientrecord.LaunchActivity" >

    <Button
        android:id="@+id/findPatient"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="findPatient"
        android:text="Find Patient" />

    <Button
        android:id="@+id/addPatient"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/findPatient"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:onClick="addPatient"
        android:text="Add New Patient" />

    <Button
        android:id="@+id/viewAppointments"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/findPatient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="viewAppointments"
        android:text="View Appointments" />

</RelativeLayout>